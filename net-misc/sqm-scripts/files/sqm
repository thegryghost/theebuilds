command="/usr/bin/sqm"

start() {
	ebegin "Starting sqm.."
	${command} start ${INTERFACE}
	eend $? "Failed to start sqm"
}


stop() {
	ebegin "Stopping sqm.."
	${command} stop
	eend $? "Failed to stop sqm"
}
